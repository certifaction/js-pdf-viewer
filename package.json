{
    "name": "@certifaction/js-pdf-viewer",
    "private": true,
    "type": "module",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/certifaction/js-pdf-viewer.git"
    },
    "publishConfig": {
        "registry": "https://npm.pkg.github.com"
    },
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "lint:oxlint": "oxlint . -D correctness --ignore-path .gitignore",
        "lint:eslint": "eslint . --cache",
        "lint": "run-s lint:*",
        "create-version": "lerna version --no-git-tag-version --no-push && npm install",
        "force-create-version": "lerna version --force-publish --no-git-tag-version --no-push && npm install"
    },
    "devDependencies": {
        "@certifaction/prettier-config": "^13.0.0",
        "@eslint/js": "^9.39.2",
        "@prettier/plugin-oxc": "^0.1.3",
        "@vue/eslint-config-prettier": "^10.2.0",
        "eslint": "^9.39.2",
        "eslint-plugin-oxlint": "^1.43.0",
        "eslint-plugin-vue": "^10.7.0",
        "globals": "^17.3.0",
        "lerna": "^9.0.3",
        "npm-run-all2": "^8.0.4",
        "oxlint": "^1.43.0",
        "prettier": "^3.8.1"
    },
    "volta": {
        "node": "25.5.0"
    }
}
