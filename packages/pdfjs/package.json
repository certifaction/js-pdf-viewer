{
    "name": "@certifaction/pdfjs",
    "version": "0.0.4",
    "description": "Convert Mozillas PDF.js to an ES6 module and transform CSS.",
    "private": false,
    "license": "MIT",
    "homepage": "https://certifaction.com",
    "repository": {
        "type": "git",
        "url": "https://github.com/certifaction/js-pdf-viewer.git",
        "directory": "packages/pdfjs"
    },
    "main": "dist/certifaction-pdfjs.common.js",
    "module": "dist/certifaction-pdfjs.esm.js",
    "files": [
        "/dist",
        "/src"
    ],
    "scripts": {
        "clean": "rimraf ./dist",
        "lint": "eslint --fix --ext .js .",
        "test": "jest --verbose",
        "js:compile": "rollup -c build/rollup.config.js --environment BUILD:production",
        "build:js": "npm-run-all js:compile",
        "build": "npm-run-all clean build:js"
    },
    "dependencies": {
        "core-js": "^3.9.0",
        "pdfjs-dist": "^2.6.347"
    },
    "devDependencies": {
        "@babel/core": "^7.13.1",
        "@babel/preset-env": "^7.13.5",
        "@rollup/plugin-commonjs": "^17.1.0",
        "@rollup/plugin-node-resolve": "^11.2.0",
        "babel-eslint": "^10.1.0",
        "eslint": "^7.20.0",
        "eslint-config-standard": "^16.0.2",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-promise": "^4.3.1",
        "npm-run-all": "^4.1.5",
        "rimraf": "^3.0.2",
        "rollup": "^2.39.1",
        "rollup-plugin-copy": "^3.4.0",
        "rollup-plugin-ignore": "^1.0.9"
    }
}
