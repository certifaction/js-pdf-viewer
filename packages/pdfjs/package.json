{
    "name": "@certifaction/pdfjs",
    "version": "2.0.0",
    "description": "Convert Mozillas PDF.js to an ES6 module and transform CSS.",
    "private": false,
    "publishConfig": {
        "registry": "https://npm.pkg.github.com"
    },
    "license": "MIT",
    "homepage": "https://certifaction.com",
    "repository": {
        "type": "git",
        "url": "https://github.com/certifaction/js-pdf-viewer.git",
        "directory": "packages/pdfjs"
    },
    "type": "module",
    "main": "dist/certifaction-pdfjs.common.js",
    "module": "dist/certifaction-pdfjs.esm.js",
    "files": [
        "/dist",
        "/src"
    ],
    "scripts": {
        "clean": "rimraf ./dist",
        "lint": "eslint --fix --ext .js .",
        "test": "jest --verbose",
        "js:compile": "rollup -c build/rollup.config.js --environment BUILD:production",
        "build:js": "npm-run-all js:compile",
        "build": "npm-run-all clean build:js"
    },
    "dependencies": {
        "core-js": "^3.30.1",
        "pdfjs-dist": "^3.5.141"
    },
    "devDependencies": {
        "@babel/core": "^7.21.4",
        "@babel/eslint-parser": "^7.21.3",
        "@babel/preset-env": "^7.21.4",
        "@rollup/plugin-babel": "^6.0.3",
        "@rollup/plugin-commonjs": "^24.1.0",
        "@rollup/plugin-node-resolve": "^15.0.2",
        "eslint": "^8.39.0",
        "eslint-config-standard": "^17.0.0",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-promise": "^6.1.1",
        "npm-run-all": "^4.1.5",
        "rimraf": "^5.0.0",
        "rollup": "^3.21.0",
        "rollup-plugin-copy": "^3.4.0"
    }
}
