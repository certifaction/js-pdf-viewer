{
    "name": "@certifaction/vue-pdf-viewer",
    "version": "0.0.4",
    "description": "PDF-Viewer for Vue.js based on Mozillas PDF.js",
    "private": false,
    "license": "MIT",
    "homepage": "https://certifaction.com",
    "repository": {
        "type": "git",
        "url": "https://github.com/certifaction/js-pdf-viewer.git",
        "directory": "packages/vue-pdf-viewer"
    },
    "main": "dist/certifaction-vue-pdf-viewer.common.js",
    "module": "dist/certifaction-vue-pdf-viewer.esm.js",
    "files": [
        "/dist",
        "/src"
    ],
    "scripts": {
        "clean": "rimraf ./dist",
        "banner": "node build/banner.js",
        "lint": "eslint --fix --ext .js,.vue .",
        "css:compile": "sass --load-path ../../node_modules src/style/index.scss dist/certifaction-vue-pdf-viewer.css",
        "css:compile:minified": "sass --load-path ../../node_modules --style=compressed src/style/index.scss dist/certifaction-vue-pdf-viewer.min.css",
        "css:prefix": "postcss dist/**/*.css --replace",
        "js:compile": "rollup -c build/rollup.config.js --environment BUILD:production",
        "build:css": "npm-run-all css:compile css:compile:minified css:prefix",
        "build:js": "npm-run-all js:compile",
        "build": "npm-run-all clean build:css build:js banner"
    },
    "dependencies": {
        "@certifaction/pdfjs": "^0.0.4",
        "@mdi/js": "^5.9.55",
        "core-js": "^3.9.0"
    },
    "peerDependencies": {
        "vue": "^2.6",
        "vue-i18n": "^8.22"
    },
    "devDependencies": {
        "@babel/core": "^7.13.1",
        "@babel/preset-env": "^7.13.5",
        "@rollup/plugin-babel": "^5.3.0",
        "@rollup/plugin-commonjs": "^17.1.0",
        "@rollup/plugin-image": "^2.0.6",
        "@rollup/plugin-node-resolve": "^11.2.0",
        "autoprefixer": "^10.2.4",
        "babel-eslint": "^10.1.0",
        "eslint": "^7.20.0",
        "eslint-config-standard": "^16.0.2",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-promise": "^4.3.1",
        "eslint-plugin-vue": "^7.6.0",
        "glob": "^7.1.6",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.2.6",
        "postcss-cli": "^8.3.1",
        "rimraf": "^3.0.2",
        "rollup": "^2.39.1",
        "rollup-plugin-copy": "^3.4.0",
        "rollup-plugin-ignore": "^1.0.9",
        "rollup-plugin-vue": "^5.1.9",
        "sass": "^1.32.8",
        "vue": "^2.6.12",
        "vue-template-compiler": "^2.6.12"
    }
}
